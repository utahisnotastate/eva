{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended", "hardcore/react", "prettier"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["only-warn", "react"],
	"rules": {
      "react/jsx-filename-extension": "off",
      "react/prop-types": "off",
      "react-perf/jsx-no-new-function-as-prop": "off",
      "jsx-a11y/no-autofocus": "off"
    }
}
